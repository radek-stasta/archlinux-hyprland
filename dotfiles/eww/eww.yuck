(defpoll trendingFile :interval "5s"
  `cat steam_trending.txt`)

(defwindow trending
  :monitor 0
  :stacking "bg"
  :windowtype "desktop"
  :geometry (geometry
    :height "100%"
    :x "10px"
    :y "10px")
  (trendingWidget))

(defwidget trendingWidget []
  (box :class "trending-box" :valign "start"
    (label :markup trendingFile)
  )
)
